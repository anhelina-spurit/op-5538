  {
    "name": "App - Related Products Swatches",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_custom_related_products_swatches",
        "label": "Enable",
        "default": true
      },
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "checkbox",
        "id": "show_current_colour",
        "label": "Show current color on product page",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_tooltip",
        "label": "Show tooltip on product page",
        "default": true
      },
      {
        "type": "text",
        "id": "custom_related_products_swatches_options_number",
        "label": "Options number",
        "info": "The number of swatches to display",
        "default": "1"
      },
      {
        "type": "text",
        "id": "custom_related_products_swatches_options_names",
        "label": "Options names",
        "info": "Each option name - even blank name - must be in ascending order and comma-separated, e.g. for: no option 1 name, 'Color:' option 2 name, 'Finishing:' option 3 name, insert ',Color:,Finishing:'",
        "default": "Coloris :"
      },
      {
        "type": "text",
        "id": "custom_link_to_product_page_related_products_swatches_options_to_display",
        "label": "Options to display in product page",
        "info": "For each option to display, input its associated namespace 'swatch_i' (i stands for the number of the swatch), e.g. for option 1 and option 3 display, insert 'swatch_1 swatch_3'",
        "default": "swatch_1"
      },
      {
        "type": "text",
        "id": "custom_unlink_to_product_page_related_products_swatches_options_to_display",
        "label": "Options to display in collection page and cross-sell sections",
        "info": "For each option to display, input its associated namespace 'swatch_i' (i stands for the number of the swatch), e.g. for option 1 and option 3 display, insert 'swatch_1 swatch_3'",
        "default": "swatch_1"
      }
    ]
  },
  {
    "name": "App - client API",
