{% style %}
  #shopify-section-{{ section.id }} {
    text-align:center;
  }
  #shopify-section-{{ section.id }} .button__link {
    margin: 1rem auto;
    padding: 1.125rem 2.5rem;
    background-color: {{- section.settings.bg_color -}};
    border: 1px solid {{ section.settings.bg_color }};
    color: {{- section.settings.color -}};
  }
  #shopify-section-{{ section.id }} .button__link:hover {
    background-color: {{- section.settings.hover_bg_color -}};
    color: {{- section.settings.hover_color -}};
  }
{% endstyle %}

{%- render 'el_link', text: section.settings.text, href: section.settings.link, custom_classes: 'button button__link' -%}

{% schema %}
{
  "name": "Button",
  "settings": [
    {
      "id": "text",
      "type": "text",
      "label": "Text"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Link"
    },
    {
      "id": "color",
      "type": "color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "id": "bg_color",
      "type": "color",
      "label": "Background color",
      "default": "#49738c"
    },
    {
      "type": "header",
      "content": "hover colors"
    },
    {
      "id": "hover_color",
      "type": "color",
      "label": "Text hover",
      "default": "#49738c"
    },
    {
      "id": "hover_bg_color",
      "type": "color",
      "label": "Background hover",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Button"
    }
  ]
}
{% endschema %}

