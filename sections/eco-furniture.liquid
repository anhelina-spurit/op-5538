{%- liquid
  capture container
    unless section.settings.image == blank
      echo '<div class="eco-furniture__media">'
    render 'el_image', src: section.settings.image,lazy_loading: true, custom_classes: 'eco-furniture__image'
      echo '</div>'
    endunless
    unless page.content == blank
      echo '<div class="eco-furniture__content">'
      assign content = page.content | replace: '<span>', '' | replace: '</span>', ''
      echo content
      echo '</div>'
    endunless
  endcapture

  capture section_content
    render 'el_container', content: container, custom_classes: 'eco-furniture__container', modifiers: 'l'
  endcapture

  render 'c_section', id: section.id, name: 'eco-furniure', content: section_content
-%}

{% schema %}
{
  "name": "Eco furniture",
  "settings": [
    {
      "id": "image",
      "type": "text",
      "label": "Image url",
      "info": "It is more priority to use the image in the SVG format. To do this, you need to upload an image to the store's file system, copy path and paste it here."

    }
  ],
  "presets": [
    {
      "name": "Eco furniture"
    }
  ]
}
{% endschema %}
