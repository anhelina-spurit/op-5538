{%- render 'c_image-fullsize', id: section.id, set: section.settings -%}

{% schema %}
{
  "name": "Image fullsize",
  "class": "image-fullsize",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "id": "heading",
      "type": "text",
      "label": "Heading text"
    },
    {
      "id": "heading_size",
      "type": "range",
      "min": 14,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Subheading"
    },
    {
      "id": "subheading",
      "type": "text",
      "label": "Subheading text"
    },
    {
      "id": "subheading_size",
      "type": "range",
      "min": 14,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    },
    {
      "id": "image_sm",
      "type": "image_picker",
      "label": "Image for mobile screens"
    },
    {
      "id": "description",
      "type": "textarea",
      "label": "Overlaying text"
    },
    {
      "id": "text_color",
      "type": "select",
      "label": "Text color",
      "default": "white",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "white",
          "label": "White"
        }
      ]
    },
    {
      "id": "align_x",
      "type": "select",
      "label": "Horizontal alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "id": "align_y",
      "type": "select",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Image fullsize"
    }
  ]
}
{% endschema %}
