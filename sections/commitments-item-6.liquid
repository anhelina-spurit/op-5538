{%- capture item_content -%}
  <div class="commitments-circles">
    {%- render 'el_heading', level: 3, text: section.settings.circles_heading, custom_classes: 'section-heading' -%}
    {%- render 'el_heading', level: 3, tag: 'div', text: section.settings.circles_subheading, custom_classes: 'section-heading section-heading--low' -%}

    <ul class="commitments-circles__list">
      {%- for i in (1..4) -%}
        {%- assign circle_title = 'circle_title_' | append: i -%}
        {%- assign circle_text = 'circle_text_' | append: i -%}

        <li class="commitments-circles__item">
          <span class="commitments-circle__title">{{ section.settings[circle_title] }}</span>
          <span class="commitments-circle__circle">{{ section.settings[circle_text] }}</span>
        </li>
      {%- endfor -%}
    </ul>
  </div>
{%- endcapture -%}

{%- liquid
  assign heading_id = section.id | append: '__heading'

  capture section_content
    render 'c_commitments-item-header', count: 6
    render 'el_container', content: item_content, modifiers: 'xxl'

    for block in section.blocks
      case block.type
        when 'image-fullsize'
          render 'c_image-fullsize', id: block.id, set: block.settings
        when 'image-text'
          render 'c_image-text', id: block.id, set: block.settings
      endcase
    endfor

    if section.settings.last_heading != blank
      capture last_content
        render 'el_heading', level: 3, tag: 'div', text: section.settings.last_heading, custom_classes: 'section-heading'
      endcapture

      render 'el_container', content: last_content, modifiers: 'xl'
    endif
  endcapture

  render 'c_section', id: 'commitments-item-6', content: section_content, name: 'commitments-item', heading_id: heading_id
-%}

{%- style -%}
  @media screen and (min-width: 750px) {
  #shopify-section-{{ section.id }} .commitments-item__header {
  margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  }
{% endstyle %}

