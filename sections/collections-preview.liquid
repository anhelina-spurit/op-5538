{%- capture slider -%}
  {% comment %}theme-check-disable NestedSnippet{% endcomment %}
  {%  render 'c_collections-preview-slider', blocks: section.blocks %}
  {% comment %}theme-check-enable NestedSnippet{% endcomment %}
{%- endcapture -%}

{%- liquid
  assign heading_id = section.id | append: '__heading'

  capture content
    render 'el_container', content: slider, modifiers: 'xxl', custom_classes: 'collections-preview__container'
  endcapture

  render 'c_section', id: section.id, name: 'collections-preview', content: content, heading_id: heading_id
-%}

