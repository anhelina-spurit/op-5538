{% comment %}
  @summary Renders size guide for women

  @param {string} id - id

  @example
  {%- render 'c_size-guide-women' -%}
{% endcomment %}

<div>
  {% liquid
    capture options
      assign tables = 'dresses,sweaters,parka,other_contries' | split: ','

      for table in tables
        assign option_id = table | append: '_' | append: id
        assign option_value = 'option_' | append: option_id
        assign option_text = 'size_guide.panel.women.table' | append: forloop.index | append: '_title'
        assign option_text = option_text | t | capitalize
        assign selected = forloop.first
        render 'el_selectbox-option', id: option_id, option_value: option_value, selected: selected, option_text: option_text
      endfor
    endcapture

    assign selected_option_text = 'size_guide.panel.women.table1_title' | t | capitalize

    render 'c_selectbox', id: 'size_guide_table_type',custom_classes: 'size-guide__selectbox-tables', custom_options: options, selected_option_id: 'option_dresses', selected_option_text: selected_option_text
  %}
</div>

<div class="size-guide__content size-guide__content--women">
  {%- assign image_src = 'women-size.png' | asset_url -%}
  {%- render 'c_size-guide-description',
          tab_name: 'women',
          image_src: image_src,
          circle_number: 0
  -%}
  <div class="size-guide__tables-list">
    <table class="size-guide__table size-guide__table--dresses" data-size-guide-table data-size-guide-table-id="dresses_{{ id }}" >
